{
  "name": "Media aside text",
  "description": "An image with accompanying text",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "heading",
          "label": "Heading text",
          "type": "text",
          "placeholder": "Some heading text",
          "required": true
        },
        {
          "id": "description",
          "label": "Description text",
          "type": "text",
          "placeholder": "Some other description text",
          "required": true
        },
        {
          "id": "image",
          "label": "Background image",
          "type": "image"
        },
        {
          "id": "links",
          "label": "Link",
          "type": "collection",
          "fields": [
            {
              "id": "style",
              "label": "Style",
              "type": "select",
              "placeholder": "Primary button",
              "options": [
                {
                  "value": "text",
                  "label": "Text"
                },
                {
                  "value": "button_primary",
                  "label": "Primary button"
                }
              ]
            },
            {
              "id": "label",
              "label": "Label text",
              "type": "text",
              "placeholder": "Label",
              "required": true,
              "conditions": {
                "style": {
                  "$ne": null
                }
              }
            },
            {
              "id": "title",
              "label": "Hover/Alt text",
              "type": "text",
              "placeholder": "Link to a thing",
              "conditions": {
                "style": {
                  "$ne": null
                }
              }
            },
            {
              "id": "url",
              "label": "Link URL",
              "type": "text",
              "ui": "url",
              "required": true,
              "conditions": {
                "style": {
                  "$ne": null
                }
              }
            }
          ]
        }
      ]
    },
    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "id": "text_color",
          "label": "Text color",
          "type": "select",
          "default": "dark",
          "options": [
            {
              "value": "light",
              "label": "Light"
            },
            {
              "value": "dark",
              "label": "Dark"
            }
          ]
        },
        {
          "id": "outer_spacing_x",
          "label": "Horizontal outer spacing",
          "description": "Padding around sides of block",
          "type": "select",
          "default": "none",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "sm",
              "label": "Small"
            },
            {
              "value": "md",
              "label": "Medium"
            },
            {
              "value": "lg",
              "label": "Large"
            }
          ]
        },
        {
          "id": "outer_spacing_y",
          "label": "Vertical outer spacing",
          "description": "Padding on top and bottom of block",
          "type": "select",
          "default": "none",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "sm",
              "label": "Small"
            },
            {
              "value": "md",
              "label": "Medium"
            },
            {
              "value": "lg",
              "label": "Large"
            }
          ]
        },
        {
          "id": "use_parallax",
          "label": "Parallax effect",
          "type": "toggle",
          "default": true
        }
      ]
    }
  ]
}
